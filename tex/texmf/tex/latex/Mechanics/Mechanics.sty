\renewcommand{\vec}[1]{\mathbf{#1}}

% bold vector notation add v to end
% first letter - letter of vector or th for theta
% h - second letter - hat accent
% d - dot accent
% dd - double dot accent

% r hat
\newcommand{\rhv}{\hat{\vec{r}}}
\newcommand{\rh}{\hat{r}}
\newcommand{\rhdv}{\dot{\hat{\vec{r}}}}
\let\oldrhd\rhd
\renewcommand{\rhd}{\dot{\hat{r}}}
\newcommand{\rhddv}{\ddot{\hat{\vec{r}}}}
\newcommand{\rhdd}{\ddot{\hat{r}}}
% r
\newcommand{\rv}{\vec{r}}
\newcommand{\rdv}{\dot{\vec{r}}}
\newcommand{\rd}{\dot{r}}
\newcommand{\rddv}{\ddot{\vec{r}}}
\newcommand{\rdd}{\ddot{r}}

% x hat
\newcommand{\xhv}{\hat{\vec{x}}}
\newcommand{\xh}{\hat{x}}
\newcommand{\xhdv}{\dot{\hat{\vec{x}}}}
\newcommand{\xhd}{\dot{\hat{x}}}
\newcommand{\xhddv}{\ddot{\hat{\vec{x}}}}
\newcommand{\xhdd}{\ddot{\hat{x}}}
% x
\newcommand{\xv}{\vec{x}}
\newcommand{\xdv}{\dot{\vec{x}}}
\newcommand{\xd}{\dot{x}}
\newcommand{\xddv}{\ddot{\vec{x}}}
\newcommand{\xdd}{\ddot{x}}

